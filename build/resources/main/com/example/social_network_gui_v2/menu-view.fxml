<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="428.0" prefWidth="652.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.social_network_gui_v2.controller.MenuController">
   <center>
      <TableView fx:id="tableViewUsers" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn prefWidth="91.0" text="ID Friend" />
          <TableColumn fx:id="tableColumnFirstName" prefWidth="106.0" text="First Name" />
            <TableColumn fx:id="tableColumnLastName" prefWidth="110.0" text="Last Name" />
        </columns>
      </TableView>
   </center>
   <right>
      <GridPane BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="216.0" minHeight="10.0" prefHeight="127.0" vgrow="SOMETIMES" />
          <RowConstraints fillHeight="false" maxHeight="256.0" minHeight="10.0" prefHeight="141.0" valignment="CENTER" vgrow="ALWAYS" />
          <RowConstraints maxHeight="307.0" minHeight="10.0" prefHeight="132.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <TextField fx:id="Last_Name" GridPane.columnIndex="1" />
            <TextField fx:id="First_Name" />
            <VBox spacing="4.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <children>
                  <Button fx:id="addButton" mnemonicParsing="false" onAction="#onAddButtonClick" prefHeight="30.0" prefWidth="92.0" text="Add Friend" />
                  <Button fx:id="delButton" mnemonicParsing="false" onAction="#onDelButtonClick" text="Delete Friend" />
                  <Button fx:id="requestButton" mnemonicParsing="false" onAction="#onRequestButtonClick" prefHeight="30.0" prefWidth="92.0" text="Requests" />
               </children>
            </VBox>
         </children>
      </GridPane>
   </right>
   <bottom>
      <AnchorPane prefHeight="55.0" prefWidth="616.0" BorderPane.alignment="CENTER">
         <children>
            <ButtonBar layoutX="438.0" layoutY="8.0" prefHeight="40.0" prefWidth="200.0">
               <buttons>
                  <Button fx:id="helpButton" mnemonicParsing="false" onAction="#onHelpButtonClick" prefHeight="30.0" text="Help" />
                <Button fx:id="closeButton" mnemonicParsing="false" onAction="#onCloseButtonClick" text="Close" />
               </buttons>
            </ButtonBar>
         </children>
      </AnchorPane>
   </bottom>
</BorderPane>
